{
    "version": "0.0.0",
    "configurations": [
        {
            // Note: Make sure to run client dev server before
            // trying to connct to it in the vscode chrome debugger
            "type": "chrome",
            "request": "launch",
            "name": "UI:Chrome - Debug",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/etl/client/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/etl/client/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "UI:Server - Debug",
            "cwd": "${workspaceFolder}/etl/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "serve"],
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "API:Dev - Debug",
            "cwd": "${workspaceFolder}/etl/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "dev"],
            "console": "externalTerminal",
            "skipFiles": [
                "${workspaceFolder}/etl/api/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Harvester:Server - Debug",
            "program": "${workspaceFolder}/etl/harvester/src/bin",
            "cwd": "${workspaceFolder}/etl/harvester",
            "console": "externalTerminal",
            "skipFiles": [
                "${workspaceFolder}/etl/harvester/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha:Tests - All",
			"program": "${workspaceRoot}/etl/api/node_modules/.bin/mocha",
			"args": [
				"${workspaceRoot}/etl/api/src/api/components/**/tests.js",
				"--exit",
				"--timeout",
                "5000"
			],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
		}
    ],
    "compounds": [
        {
            "name": "API & Client - Debug",
            "configurations": [
                "API:Dev - Debug",
                "UI:Server - Debug"
            ]
        },
        {
            "name": "All modules - Debug",
            "configurations": [
                "API:Dev - Debug",
                "UI:Server - Debug",
                "Harvester:Server - Debug"
            ]
        }
    ]
}